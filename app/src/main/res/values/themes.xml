   <style name="Theme.PdfReader" parent="Theme.AppCompat.DayNight.NoActionBar">
      <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
      <item name="statusBarColor">@color/white</item>
      <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/colorPrimary</item>
      <item name="android:windowContentOverlay">@null</item>

      <item name="colorAccent">@color/colorAccent</item>
      <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
      <item name="sytemTonesBackground">@color/griesh</item>
      <item name="toolbarcolor">@color/toolbarcolor</item>
      <item name="textcolorlight">@color/textcolordark</item>
      <item name="textcolordark">@color/textcolorligh</item>
      <item name="textcolor">@color/textcolorligh</item>
      <item name="splashhaeder">@drawable/ic_pdf_splash_header</item>

      <item name="adbuttontextcolor">@color/white</item>
      <item name="textcolorfortrue">@color/white</item>
      <item name="tonescreenviewcolor">@color/tonescreenviewlight</item>
      <item name="textcolorforfalse">@color/black</item>
      <item name="shorttextformelodyflase">@color/grey</item>


      <item name="drawerbackground">@color/drawerbackgroundlight</item>
      <item name="containercolor">@color/containercolorlight</item>
      <item name="adtextcolor">@color/containercolorlight</item>
      <item name="viewcolor">@color/viewlight</item>
      <item name="appbartheme">@style/MyOverflowButtonStyle</item>

      <item name="primaryTitleColor">@color/primaryTitleColor</item>
      <item name="viewbackground">@color/viewwhite</item>
      <item name="primaryDescriptionColor">@color/primaryDescriptionColor</item>
      <item name="rateusColor">@color/rateusColor</item>
      <item name="settingfragmentbackground">@color/backgroundsettingfragmentwhite</item>
      <item name="primaryDateColor">@color/primaryDateColor</item>
      <item name="primaryBackgroundColor">@color/primaryBackgroundColor</item>
      <item name="primaryCardBackgroundColor">@color/primaryCardBackgroundColor</item>
   </style>
   <style name="Theme.PdfReader.NoActionBar">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
   </style>
   <style name="MenuLabelsStyle">
      <item name="android:background">@drawable/fab_label_background</item>
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:textSize">14sp</item>
      <item name="android:maxLines">2</item>
      <item name="android:ellipsize">end</item>
   </style>
   <style name="circleImageView">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">50%</item>
   </style>
   <style name="MenuButtonsStyle">
      <item name="fab_size">mini</item>
      <item name="fab_showAnimation">@anim/jump_from_down</item>
      <item name="fab_hideAnimation">@anim/jump_to_down</item>
      <item name="fab_shadowColor">#444</item>
      <item name="fab_colorNormal">#F44336</item>
      <item name="fab_colorPressed">#F44336</item>
      <item name="fab_colorRipple">#F44336</item>
   </style>
   <style name="AppTheme.NoActionBar2" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
      <item name="android:windowDisablePreview">false</item>
      <item name="android:windowContentOverlay">@null</item>

      <item name="android:statusBarColor">@color/colorPrimaryDark</item>
   </style>
   <style name="Theme.FindMyPhone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

   <style name="Theme.FindMyPhone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
   <style name="CoffeeDialog" parent="Theme.Design.Light.BottomSheetDialog">
      <item name="android:windowCloseOnTouchOutside">false</item>
      <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:colorBackground">@android:color/transparent</item>
      <item name="android:backgroundDimEnabled">true</item>
      <item name="android:backgroundDimAmount">0.3</item>
      <item name="android:windowFrame">@null</item>
      <item name="android:windowIsFloating">true</item>
   </style>

   <style name="Theme.PdfReader.AdTheme" >
      <item name="android:background">@color/black</item>
      <item name="android:windowBackground">@color/black</item>
   </style>
</resources>